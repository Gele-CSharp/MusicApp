@model CommentModel

<h3>Comments:</h3>

@if (Model.Comments.Any())
{
    @foreach (var message in Model.Comments)
    {
        <div class="card bg-light col-6">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>@message.User.FirstName @message.User.LastName: @message.Content</p>
                </blockquote>
            </div>
        </div>
    }
}
else
{
    <p>No comments yet!</p>
}

<form asp-controller="Album" asp-action="Comment" method="post" asp-route-albumId="@Model.AlbumId">
    <div class="form-group card-header row">
        <div class="col-12">
            <h5>Post a new comment</h5>
            <div class="col-8">
                <label>Comment:</label>
                <textarea asp-for="@Model.Comment.Content" class="form-control" rows="3"></textarea>
            </div>
            <div class="col-4">
                <input class="btn btn-primary mt-2 float-lg-right" type="submit" value="Post" />
            </div>
        </div>
    </div>
</form>